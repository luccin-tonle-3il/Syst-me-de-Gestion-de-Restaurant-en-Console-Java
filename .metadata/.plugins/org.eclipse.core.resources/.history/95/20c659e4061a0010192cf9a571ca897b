package notif;

public class EtatEnvoyer extends Etat {



	public EtatEnvoyer(Notification notification) {
		super(notification);
		// TODO Auto-generated constructor stub
	}

	@Override
	public void operationEtatLu() {
		// TODO Auto-generated method stub
		notification.setEtat(new EtatLu(notification));
		System.out.println ("message sera lu");

	}

	@Override
	public void operationEtatEnvoyer() {
		// TODO Auto-generated method stub
		notification.setEtat(new EtatEnvoyer(notification));
		System.out.println ("Méssage maintenant envoyé");
		
	}

	@Override
	public void operationEtatEnAttente() {
		// TODO Auto-generated method stub
		System.out.println ("impossible");
		
	}

	@Override
	public void operationEtatEchoue() {
		// TODO Auto-generated method stub
		notification.setEtat(new EtatEchouee(notification));
		System.out.println ("Envoie echouée ");

		
	}
	@Override
	public void doAction() {
		// TODO Auto-generated method stub
		System.out.println ("Méssage maintenant envoyé");
	}

}
